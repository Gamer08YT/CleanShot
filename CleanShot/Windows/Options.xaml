<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanShot.Windows"
        xmlns:Models="clr-namespace:CleanShot.Models" x:Class="CleanShot.Windows.Options"
        mc:Ignorable="d"
        Title="CleanShot Options" Height="275" Width="300" Closing="Window_Closing" Icon="/CleanShot;component/Assets/CompactCamera_Nolan.ico">

    <Window.DataContext>
        <Models:Settings/>
    </Window.DataContext>

    <StackPanel Margin="10">
        <CheckBox Content="Keep CleanShot above all other windows" IsChecked="{Binding AlwaysOnTop, Mode=TwoWay}" Margin="0,0,0,10"/>
        <CheckBox Content="Copy captures to clipboard" IsChecked="{Binding CopyToClipboard, Mode=TwoWay}" Margin="0,0,0,10"/>
        <CheckBox Content="Save captures to disk" IsChecked="{Binding SaveToDisk, Mode=TwoWay}" Margin="0,0,0,10"/>
        <CheckBox Content="Show tray icon notification" IsChecked="{Binding IsTrayNotificationEnabled, Mode=TwoWay}" Margin="0,0,0,10"/>
        <TextBlock Text="Save Folder:" Margin="0,0,0,5"/>
        <TextBox x:Name="textSaveFolder" Text="{Binding SaveFolder, Mode=TwoWay}" Margin="0,0,0,5" LostFocus="textSaveFolder_LostFocus"/>
        <Button x:Name="buttonBrowse" HorizontalAlignment="Right" Height="20" Width="20" Background="{x:Null}" BorderBrush="{x:Null}" Click="buttonBrowse_Click" ToolTip="Browse" Margin="0,0,0,10">
            <Image Source="/CleanShot;component/Assets/Folder_32xMD.png">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/CleanShot;component/Assets/Folder_32xMD.png"/>
                </Image.OpacityMask>
            </Image>
        </Button>
        <Button x:Name="buttonUninstall" Content="Uninstall" Padding="5" HorizontalAlignment="Left" ToolTip="Remove data folder and files from AppData." Click="buttonUninstall_Click"/>
    </StackPanel>
</Window>
