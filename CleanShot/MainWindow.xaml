<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanShot"
        xmlns:Models="clr-namespace:CleanShot.Models" x:Class="CleanShot.MainWindow"
        mc:Ignorable="d"
        Title="CleanShot" Height="100" Width="150" ResizeMode="NoResize" Icon="Assets/CompactCamera_Nolan.ico" Loaded="Window_Loaded" Topmost="{Binding AlwaysOnTop}" Closing="Window_Closing">
    <Window.DataContext>
        <Models:Settings/>
    </Window.DataContext>
    <Grid Margin="10">
        <Button x:Name="buttonCapture" Height="25" Width="80" HorizontalAlignment="Left" VerticalAlignment="Center" Click="buttonCapture_Click">
            <Image Source="Assets/WindowScreenshot_16x.png" Stretch="None"/>
        </Button>
        <Button x:Name="buttonMenu" HorizontalAlignment="Right" VerticalAlignment="Center" Height="25" Width="25" BorderBrush="Transparent" Click="buttonMenu_Click" Background="{x:Null}">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="menuUpdate"  Header="Check for Updates" Click="menuUpdate_Click"/>
                    <MenuItem x:Name="menuOptions" Header="Options" Click="menuOptions_Click"/>
                    <MenuItem x:Name="menuAbout" Header="About" Click="menuAbout_Click"/>
                </ContextMenu>
            </Button.ContextMenu>
            <Button.OpacityMask>
                <ImageBrush ImageSource="Assets/HamburgerMenu_16x.png"/>
            </Button.OpacityMask>
            <Image Source="Assets/HamburgerMenu_16x.png"></Image>
        </Button>
    </Grid>
</Window>
