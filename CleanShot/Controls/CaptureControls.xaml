<UserControl x:Class="CleanShot.Controls.CaptureControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CleanShot.Controls"
             mc:Ignorable="d" 
             Padding="20px">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="buttonPauseResume" Height="25" Width="50" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="buttonPauseResume_Click">Pause</Button>
        <Button x:Name="buttonStop" Height="25" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Click="buttonStop_Click">Stop</Button>
    </StackPanel>
</UserControl>
